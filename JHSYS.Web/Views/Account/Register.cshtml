@model JHSYS.Web.Models.UserInfo
    <title>注册</title>
<style>
    body,p {
        /*background-color:aquamarine;*/
        padding:0;
        margin:0;
    }
    h2{
        text-align:center;
        padding:0;
        margin:0;
        height:30px;
        margin-bottom:20px;
    }
    .editor-content {
        width: 300px;
        margin: 120px auto ;
        border:1px solid #F2F2F2;
        background-color:#F2F2F2;
        padding:30px 100px 50px 100px;
        border-radius:8px;
    }

    .editor-group {
        width: 300px;
        height: 50px;
    }

    .editor-label {
        line-height: 30px;
        text-align: center;
        margin-right: 10px;
    }

    .editor-group > div {
        float: left;
    }

    .editor-field {
        width: 250px;
        height: 30px;
    }

    .int-icon {
        position: relative;
        top: 5px;
        left: 230px;
    }

    .editor-field input {
        width: 250px;
        height: 30px;
        border: 1px solid #eee;
        border-radius: 3px;
    }
    .editor-field span{
        color:red;
        font-size:12px;
    }

    .submit-ok {
        width: 120px;
        height: 30px;
        line-height: 30px;
        text-align: center;
        background-color: #b200ff;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 0;
        margin: 0;
    }
</style>


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    
    <div class="editor-content">
        <h2>注册</h2>
        <div class="editor-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.Name)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Name, "string", new { maxlength = 8, placeholder = "名称..." })<br />
            </div>
        </div>
        <div class="editor-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.Email)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Email, "string", new { maxlength = 250,placeholder = "邮箱..." })
            </div>
        </div>
        <div class="editor-group">
            <div class="editor-label">
                @Html.LabelFor(model => model.Password)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Password)
            </div>
        </div>

        @*<div class="editor-label">
                @Html.LabelFor(model => model.Nickname)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Nickname)
                @Html.ValidationMessageFor(model => model.Nickname)
            </div>*@

        <p>
            <input type="submit" class="submit-ok" value="注册" /><a style="margin-left:20px;" href="~/Account/Login">登录</a>
        </p>
        <p>
            
        </p>
        <p style="font-size:12px;color:red;padding:5px 0;">
            @Html.ValidationMessageFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Email)
            @Html.ValidationMessageFor(model => model.Password)
        </p>
    </div>

}
